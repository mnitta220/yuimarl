doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title プロジェクトを作成 - Yuimarl
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous")
    link(rel="icon" type="image/x-icon" href="../static/favicon.ico")
  body
    include includes/nav.pug

    main
      .py-3
        .container
          h3.mb-3 プロジェクトを作成
          form
            //- プロジェクト名
            .row.py-2
              label.col-md-3.col-form-label.bg-light.mb-1(for="name") プロジェクト名
              .col-md-9.mb-1
                input.form-control#name(type="text" maxlength="40" required)
            //- オーナー
            .row.py-2
              label.col-md-3.col-form-label.bg-light.mb-1(for="owner") オーナー
              .col-md-9.mb-1
                .form-floating
                  span 新田雅浩 [masa.nitta@nifty.ne.jp]
            //- メンバー
            .row.py-2
              label.col-md-3.col-form-label.bg-light.mb-1(for="member") メンバー
              .col-md-9.mb-1
                .form-floating
                  table.table.table-hover
                    thead
                      tr
                        th(scope="col") 名前
                        th(scope="col") メールアドレス
                        th(scope="col") ロール
                        th(scope="col") 
                    tbody
                      tr
                        td 新田雅浩
                        td masa.nitta@nifty.ne.jp
                        td オーナー
                        td
                          a.badge.bg-info.text-dark.link-underline.link-underline-opacity-0(href="#") 更新
                          | &nbsp;
                          a.badge.bg-info.text-dark.link-underline.link-underline-opacity-0(href="#") 削除
                      tr
                        td 新田雅浩
                        td masa.nitta@nifty.ne.jp
                        td オーナー
                        td
                          a.badge.bg-info.text-dark.link-underline.link-underline-opacity-0(href="#") 更新
                          | &nbsp;
                          a.badge.bg-info.text-dark.link-underline.link-underline-opacity-0(href="#") 削除
                      tr
                        td 新田雅浩
                        td masa.nitta@nifty.ne.jp
                        td オーナー
                        td
                          a.badge.bg-info.text-dark.link-underline.link-underline-opacity-0(href="#") 更新
                          | &nbsp;
                          a.badge.bg-info.text-dark.link-underline.link-underline-opacity-0(href="#") 削除
                  button.btn.btn-primary.btn-sm(data-bs-toggle="modal" type="button" title="メンバーを追加する" data-bs-target="#exampleModal") ＋
                .modal.fade#exampleModal(tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true")
                  .modal-dialog
                    .modal-content
                      .modal-header
                        h1.modal-title.fs-5#exampleModalLabel メンバーを検索
                        button.btn-close(type="button" data-bs-dismiss="modal" aria-label="キャンセル")
                      .modal-body
                        .row
                          label.col-md-3.col-form-label.mb-1(for="email") メールアドレス
                          .col-md-6.mb-1
                            input.form-control#email(type="text" maxlength="50")
                          .col-md-3.mb-1
                            button.btn.btn-info(type="button") 検索
                        .row
                          label.col-md-3.col-form-label.mb-1(for="member-name") 名前
                          .col-md-6.mb-1
                            input.form-control#member-name(type="text" maxlength="50")
                          .col-md-3.mb-1
                            button.btn.btn-info(type="button") 検索
                        .row.py-3
                          .col
                            table.table.table-hover
                              thead
                                tr
                                  th(scope="col") 選択
                                  th(scope="col") 名前
                                  th(scope="col") メールアドレス
                                  th(scope="col") ロール
                              tbody
                                tr
                                  td
                                    input.form-check-input#flexCheckDefault(type="checkbox" value="" checked)
                                  td 新田雅浩
                                  td masa.nitta@nifty.ne.jp
                                  td
                                    select.form-select#role(name="role")
                                      option(value="2") 管理者
                                      option(value="3") メンバー
                                      option(value="4") 閲覧者
                      .modal-footer
                        button.btn.btn-secondary(type="button" data-bs-dismiss="modal") キャンセル
                        button.btn.btn-primary(type="button" disabled) メンバーに追加
            //-
              fieldset.py-2
                .row
                  legend.col-form-label.col-md-3.bg-light.mb-1 言語
                  .col-md-9.mb-1
                    .form-check.form-check-inline
                      input.form-check-input#radio1(type="radio" name="questionnaire" value="answer1" checked="checked")
                      label.form-check-label(for="radio1") 日本語
                    .form-check.form-check-inline
                      input.form-check-input#radio2(type="radio" name="questionnaire" value="answer2")
                      label.form-check-label(for="radio2") 英語
            .row.py-3.mt-2.bg-light
              .col-md-9
                button.btn.btn-primary(type="submit") 作成する

    include includes/footer.pug
