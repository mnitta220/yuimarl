    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous")
    link(rel="stylesheet" href="../../static/css/style0045.css")
    link(rel="icon" type="image/x-icon" href="../../static/favicon.ico")
  body
    include ../includes/nav.pug

    main
      form(action="/ticket/add" method="POST")
        //- プロジェクト
        .py-3.bg-light
          section#news
            .container
              .row
                .col-md-3
                  h3 プロジェクト
                .col-md-9
                  dl.row
                    .col
                      a(href="/project/list") 文化祭実行プロジェクト
                      | &nbsp;&nbsp;
                      small
                        span.badge.bg-secondary.text-light オーナー
                  //- dl.row
                    .col
                      a.btn.btn-primary(href="/project/add") プロジェクト一覧
                      | &nbsp;&nbsp;
                      a.btn.btn-primary(href="step02.html") プロジェクトを作成
                  .row
                    .col
                      a(href="step02.html" title="プロジェクト一覧") 
                        img.icon3(src="../../static/ionicons/list-outline.svg")
                      //- | &nbsp;[プロジェクト一覧]
                      | &nbsp;&nbsp;&nbsp;
                      a(href="step02.html" title="プロジェクトを作成")
                        img.icon3(src="../../static/ionicons/add-circle-outline.svg")
                      //- | &nbsp;[プロジェクトを作成]

        //- チケット
        .py-3
          section.mb-3#tickets
            .container
              .row
                .col-md-3
                  h3 チケット
                .col-md-9
                  a(href="/ticket/add" title="チケット一覧") 
                    img.icon3(src="../../static/ionicons/list-outline.svg")
                  | &nbsp;&nbsp;&nbsp;
                  a(href="step02.html" title="チケットを追加")
                    img.icon3(src="../../static/ionicons/add-circle-outline.svg")

    //- include ../includes/footer.pug
    footer.py-1.mt-3.bg-dark.text-light
      include ../includes/footer2.pug

      hr
      .container
        .row.align-items-end
          .col-md-2.text-end.py-1
            //- a.nav-link.px-2.px-md-0(href="step07.html") ← prev
          .col-md-8
            .alert.alert-danger.text-start(role="alert")
              | プロジェクト一覧 step01.
              br
              | 「プロジェクト一覧」をクリックする。
          .col-md-2.text-start.py-1
            a.nav-link.px-2.px-md-0(href="step02.html") next →

